<h1>Forget password</h1>

<form  method ="post" >
    <div>
        <input type="email" placeholder="Enter email" name="email" size="40" required />
      </div>
      <br />
    <div>
        <button type="submit">Reset password</button>
      </div>
      
</form>
<%if(typeof message !== 'undefined'){%>
